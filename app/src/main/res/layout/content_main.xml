                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If the qualifying person is a child but not a dependent enter the child's name"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A qualifying widow or a qualifying widower with a dependent child"/>
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check the exemptions that apply"/>
